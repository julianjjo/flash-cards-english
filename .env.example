# Flash Cards Application Environment Variables

# Server Configuration
NODE_ENV=development
PORT=4000

# Database (D1)
D1_URL=https://api.cloudflare.com/client/v4/accounts/YOUR_ACCOUNT_ID/d1/database/YOUR_DATABASE_ID
D1_API_KEY=your_d1_api_key_here

# External Services
GEMINI_API_KEY=your_gemini_api_key_here

# Cloudflare R2 Storage
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET=your_r2_bucket_name
R2_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com
R2_PUBLIC_URL=https://your_account_id.r2.cloudflarestorage.com/your_bucket_name

# JWT Authentication (generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your_64_character_random_jwt_secret_here
JWT_REFRESH_SECRET=your_64_character_random_refresh_secret_here

# Admin User Credentials (for initial setup and management)
ADMIN_USER=your_admin_username
ADMIN_PASS=your_secure_admin_password
ADMIN_EMAIL=admin@yourdomain.com

# Frontend Configuration
VITE_API_URL=http://localhost:4000

# Deprecated (no longer used)
# ELEVENLABS_API_KEY=replaced_by_gemini_tts