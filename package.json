{
  "name": "flash-cards",
  "version": "1.0.0",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "test:back": "node --experimental-vm-modules node_modules/.bin/jest --runInBand",
    "test:front": "npm test --prefix client",
    "test": "npm run test:back && npm run test:front",
    "build": "npm --prefix client run build",
    "start": "node server/server.js",
    "postinstall": "npm install --include=dev --prefix client && npm run build --include=dev --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node server/index.js",
    "client": "cd client && npm run dev"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.787.0",
    "@google/genai": "^0.14.1",
    "@tailwindcss/vite": "^4.1.4",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^11.9.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.2",
    "node-fetch": "^3.3.2",
    "tailwindcss": "^4.1.4"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "supertest": "^7.1.0"
  }
}
