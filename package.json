{
  "name": "flash-cards",
  "version": "1.0.0",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "test:back": "jest --config jest.workspace.config.js --selectProjects=\"Backend Tests\" --runInBand",
    "test:front": "jest --config jest.workspace.config.js --selectProjects=\"Frontend Tests\"",
    "test:unit": "jest --config jest.workspace.config.js --selectProjects=\"Backend Tests\" \"Frontend Tests\"",
    "test:integration": "jest --config jest.workspace.config.js --selectProjects=\"Backend Tests\" --testPathPattern=\"integration\"",
    "test:contract": "jest --config jest.workspace.config.js --selectProjects=\"Backend Tests\" --testPathPattern=\"contract\"",
    "test:component": "jest --config jest.workspace.config.js --selectProjects=\"Frontend Tests\"",
    "test": "jest --config jest.workspace.config.js",
    "test:watch": "jest --config jest.workspace.config.js --watch",
    "test:coverage": "jest --config jest.workspace.config.js --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:jest": "jest --config jest.workspace.config.js --selectProjects=\"E2E Tests\"",
    "test:contracts": "jest --config jest.workspace.config.js --selectProjects=\"E2E Tests\" --testPathPattern=\"contracts\"",
    "test:journeys": "jest --config jest.workspace.config.js --selectProjects=\"E2E Tests\" --testPathPattern=\"journeys\"",
    "test:performance": "jest --config jest.workspace.config.js --selectProjects=\"E2E Tests\" --testPathPattern=\"performance\"",
    "test:accessibility": "jest --config jest.workspace.config.js --selectProjects=\"E2E Tests\" --testPathPattern=\"accessibility\"",
    "test:edge-cases": "jest --config jest.workspace.config.js --selectProjects=\"E2E Tests\" --testPathPattern=\"edge-cases\"",
    "test:all": "npm run test && npm run test:e2e",
    "test:ci": "jest --config jest.workspace.config.js --ci --coverage --watchAll=false",
    "test:coverage:report": "node tests/scripts/generate-coverage-report.js",
    "test:monitor": "node tests/scripts/test-monitor.js",
    "test:runner": "node tests/scripts/test-runner.js",
    "data:cleanup": "node tests/scripts/data-cleanup.js",
    "data:health": "node tests/scripts/data-cleanup.js health-check",
    "data:seed": "node tests/scripts/data-cleanup.js seed",
    "test:visual": "node tests/scripts/visual-comparison.js compare",
    "test:visual:baseline": "node tests/scripts/visual-comparison.js create-baseline",
    "test:mutation": "node tests/mutation/mutation-testing.js",
    "test:security": "node tests/security/security-testing.js",
    "test:performance": "node tests/performance/performance-regression.js test api-performance",
    "perf:baseline": "node tests/performance/performance-regression.js baseline",
    "perf:trends": "node tests/performance/performance-regression.js trends",
    "build": "npm --prefix client run build",
    "start": "node server/server.js",
    "postinstall": "npm install --include=dev --prefix client && npm run build --include=dev --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node server/index.js",
    "client": "cd client && npm run dev",
    "migrate": "node server/scripts/migrate.js",
    "db:status": "node -e \"import('./server/config/database.js').then(db => db.default.initialize().then(() => db.default.getStats()).then(console.log).finally(() => db.default.close()))\""
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.787.0",
    "@google/genai": "^0.14.1",
    "@tailwindcss/vite": "^4.1.4",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^11.9.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.2",
    "node-fetch": "^3.3.2",
    "tailwindcss": "^4.1.4"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@playwright/test": "^1.55.0",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.1.2",
    "jest-junit": "^16.0.0",
    "jest-playwright-preset": "^4.0.0",
    "playwright": "^1.55.0",
    "supertest": "^7.1.0",
    "node-cron": "^3.0.3",
    "ws": "^8.14.2",
    "@babel/core": "^7.23.0",
    "@babel/generator": "^7.23.0",
    "@babel/traverse": "^7.23.0",
    "@babel/types": "^7.23.0",
    "pngjs": "^7.0.0",
    "pixelmatch": "^5.3.0",
    "axios": "^1.6.0"
  }
}
